<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <% if post.image.attached? %>
      <%= image_tag post.image ,size:"200x100"%>
    <% end %>

  </p>

</div>